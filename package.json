{
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "d:prune": "docker system prune -f",
    "d:prune:all": "docker image prune -a -f && npm run d:prune",
    "setup:prod": "npm run pull && ./scripts/setup/chmod-scripts",
    "reset:hard": "git reset --hard origin/master",
    "containers-build-and-up:prod": "./scripts/containers/build-and-up-prod",
    "install:prod": "npm run reset:hard && npm run setup:prod && npm run containers-build-and-up:prod && npm run d:prune:all",
    "setup:dev": "npm run pull && ./scripts/setup/chmod-scripts && ./scripts/setup/chmod-nodemodules",
    "containers-build-and-up:dev": "./scripts/containers/build-and-up-dev",
    "install:deps": "./scripts/setup/install-deps",
    "install:dev": "npm run setup:dev && npm run install:deps && npm run containers-build-and-up:dev && npm run d:prune",
    "build:prod": "scripts/build/build",
    "kernel": "scripts/kernel/cp-kernel",
    "pull": "scripts/git/pull",
    "push:only": "scripts/git/push",
    "push:build": "npm run build:prod && scripts/git/push"
  }
}
